<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="Vector.EditorPage">
    <ContentView.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button x:Name="update" Text="Update" Clicked="InputCompleted" Padding="20,5"/>
                <Button x:Name="help" Text="Help" Clicked="ShowHelp" Padding="20,5"/>
            </StackLayout>
            <Editor x:Name="input" Text="Slider(*scale*,0.1,9)" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" IsTextPredictionEnabled="False" Keyboard="Text" FontSize="25"/>
        </StackLayout>
    </ContentView.Content>

</ContentView>